@page "{id}"
@model RecipeApp.Pages.RateModel
@{
    ViewData["Title"] = "Rate Recipe";
}

<link href="~/css/jquery.rateyo.min.css" rel="stylesheet" />

<form method="post" class="d-flex align-content-center">
    <div id="rateIt"></div>
    <div>
        <button type="submit" class="btn btn-success" id="getRating">Rate it!</button>
        <input name="_rate" type="hidden" id="rating" /> |
        <a class="btn btn-primary" asp-page="./Recipe/Index">Back to List</a>
    </div>
</form>

<script src="~/js/jquery.min.js"></script>
<script src="~/js/jquery.rateyo.min.js"></script>

<script type="text/javascript">
    $(function () {
        var $rateYo = $("#rateIt").rateYo({
			rating: 0,
			fullStar: true,
            onChange: function (rating, rateYoInstance) {
				$("#rating").val(rating);
			}
		});
	});
</script>
